<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/topbar_chat"
                                   android:layout_width="match_parent"
                                   android:layout_height="100dp"
                                   android:layout_gravity="start"
                                   android:background="@color/off_white"
                                   android:clickable="true"
                                   android:focusable="true"
                                   app:contentInsetEnd="0dp"
                                   app:contentInsetStart="0dp"
                                   app:popupTheme="@style/AppTheme.PopupOverlay">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/chat_list_topbar_settings"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/menu_bars"/>

            <ImageView
                    android:id="@+id/chat_list_topbar_card_swipe"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/cardswipeicon"/>

            <ImageView
                    android:id="@+id/chat_list_topbar_logo"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/adt"/>

            <ImageView
                    android:id="@+id/chat_list_topbar_matches"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/heartdog2_2"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chat_list_topbar_profile"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/huella"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="1dp"/>

        </LinearLayout>

    </LinearLayout>


</androidx.appcompat.widget.Toolbar>
